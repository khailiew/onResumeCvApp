<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/turquoise_1</item>
        <item name="colorPrimaryVariant">@color/turquoise_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender_1</item>
        <item name="colorSecondaryVariant">#EBEFFC</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RadialBackground" parent="Theme.MyCV">
        <item name="android:windowBackground">@drawable/bg_radial_gradient</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.Animation</item>
        <item name="android:textColor">@color/black_2</item>
    </style>
</resources>