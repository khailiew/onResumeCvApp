<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Animation" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/lavender_1</item>
        <item name="layout_constraintWidth_percent" format="float" type="dimen">0.75</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/recycler_card_elevation</item>
        <item name="cardMaxElevation">@dimen/recycler_card_max_elevation</item>
        <item name="cardBackgroundColor">@color/off_white</item>
        <item name="cardCornerRadius">@dimen/recycler_card_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/navy_1</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>